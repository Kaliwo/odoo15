<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="email_template_access_key" model="mail.template">
        <field name="name">Access Key Email Template</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="subject">Your Access Key for Purchase Order</field>
        <field name="email_from">${object.company_id.email or 'info@example.com'}</field>
        <field name="email_to">${object.partner_id.email}</field>
        <field name="body_html" type="html">
            <div>
                <p>Hello ${object.partner_id.name},</p>
                <p>Thank you for your order. Your access key for the purchase order is:</p>
                <p><strong>${access_key}</strong></p>
                <p>Please provide this key to the vendor to enable them to view the purchase order.</p>
                <p>Best regards,</p>
                <p>${object.company_id.name}</p>
            </div>
        </field>
    </record>
</odoo>
