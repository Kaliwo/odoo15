<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_internal_user_appointment_form" model="ir.ui.view">
            <field name="name">internal.user.appointment.form</field>
            <field name="model">internal.user.appointment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="user_id"/>
                            <field name="appointment_date"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
